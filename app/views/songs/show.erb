<div id='song_info'>
  <%= song.title %><br>
  <%= song.user.user_name %><br>
  <%= song.content %><br>
</div>

<% if session[:user_id] %>
  <div class='favorite_form'>
    <form action='/favorites/<%= song.id %>' method='post'>
      <input type='submit' value='favorite song'>
    </form>
  </div>
  <div class='favorites_count'>
    Favorites Count: <span class='count'><%= User.find(session[:user_id]).favorites.count %></span>
  </div>
<% end %>